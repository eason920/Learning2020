-var status = 'dev'
doctype html
html(lang='zh')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='description', content='title here')
		meta(property='og:title', content='title here')
		meta(property='og:url', content='url here')
		meta(property='og:image', content='location href hrer')
		meta(property='og:description', content='content here')
		link(rel='icon', href='./images/favicon.ico', type='image/ico')
		title FUNDAY教學中心
		link(href='css/bootstrap.min.css', rel='stylesheet', type='text/css')
		link(href='css/pc_a.css', rel='stylesheet', type='text/css')
		link(rel="stylesheet", href="css/step1.css")
		script(src='js/jquery-1.11.1.min.js')
		script.
			var videoId = 'h1I5JM16N0c';
		script(src='js/pc.js', type='text/javascript')
		script(src='./js/share.js')
	body
		// v HTML START v
		.topbar
			.wrapper
				.topbar-back
					a.topbar-back-btn(href='#')
						.icon-arrowleft
						|學習驗收
				.topbar-main-f1
					.topbar-main-f2
						ul.topbar-step
							li.topbar-step-item.active
								.topbar-num 1
								.topbar-text 認識本文
							li.topbar-step-item
								.topbar-num 2
								.topbar-text 加強記憶
							li.topbar-step-item
								.topbar-num 3
								.topbar-text 學習驗收
								ul.topbar-scort
									li.topbar-scrot-item
										.topbar-num A
										.topbar-text 理解力測驗
									li.topbar-scrot-item
										.topbar-num B
										.topbar-text 聽力測驗　
									li.topbar-scrot-item
										.topbar-num C
										.topbar-text 克漏字測驗
						.topbar-icon
							a.topbar-icon-item(href='#')
								.icon-favorite
							a.topbar-icon-item(href='#')
								.icon-print
		.main
			header
				input.copy-source(type='text')
				nav
					a.logo(href='#')
					ul
						li#control-1.control.active(data-value='1')
							b 講解
							a.toggle(href='#')
							i 朗讀
						li
							input.word_btn(type='button', value='重點單字')
						li
							.share_btn
							button(type='button')
							i 分享
					
					.share
						a.line_btn.share-line(href='#')
						a.fb_btn.share-fb(href='#')
						a.link_btn.copy-btn(href='#')
							.copied 己拷貝連結
				.mask
				.navbg
			.article_mask
				section
					aside
						.aside-above
							.aside-above-main
								.title#title-a 
									if (status === 'dev')
										|Amazon Rainforest on Fire
									else
										|<%=en_subject%>
								.sub#subtitle-a 
									if (status === 'dev')
										|亞馬遜雨林大火
									else
										|<%=ch_subject%>
							.aside-above-sub
								.aside-above-sub-en Powerful winds blew the smoke to the city and darkened the sky.
								.aside-above-sub-ch 強風將濃煙帶到城市，使天空變黑。
								.aside-speedbox
									.speed-point
									.speed
										b.speed-left 快
										input#Speed_range(type='range', min='0.5', max='1.5', value='1', step='0.25')
										b 慢
									input.play_btn(type='button')
								.add-label +
						.aside-below
							.ArticleInfo-box
								.ArticleInfo1.type2
									.classification_btn
										span#class_f 
											if (status === 'dev')
												|生活｜Culture/文化 CEFR:C1
											else
										.classification
											ul
												li 專業通則
												li 生活
												li 社交
												li 通識
												li 自我意識
												li 基礎養成
								.ArticleInfo2 
									if (status === 'dev')
										|文章序號:17976 Date:2019/05/16
									else
							.article-vbox
								.Article_pic
									img(src='./images/galxy.jpg')
								// img ^v video box
								#y-box.is-first-start
								img.y-start(src='images/y_start.png')
								.y-small
					article
						.mask
							// 內文區塊
							.article(style='display:none;')
								if (status === 'dev')
									include partials/text_article
								else
									|>>l-2020
							.article2
								if (status === 'dev')
									include partials/text_article2
									include partials/text_annotation
								else
									|>>l-2020
				.tranglationBody
					input.close_btn(type='button')
					.translation_Font Vacabulary
					.translation_list
						if (status === 'dev')
							include partials/text_vacabulary
						else
		script. 
			//const memberJSON = JSON.parse('{"memo":["msg 1"]}');
		//--.memobox
			.memobox-bar title
			textarea.memobox-text(placeholder='在此輸入您的筆記')
			.memobox-box
		// ^ HTML END ^

